Name:           hidrosis
Version:        0.1
Release:        1%{?dist}
Summary:        Hidrosis integrates the daktylos keyboard with the host machine

License:        GPL3
URL:            https://github.com/whoiscircuit/daktylos
Source0:        hidrosis
Source1:        hidrosis.service
Source2:        90-hidrosis.rules

Requires:       libc, systemd, udev

%description
Hidrosis integrates the daktylos keyboard with the host machine
Hidrosis helps the daktylos keyboard (elephant42) to detect operating system,
active keyboard layout and other attributes.

%prep
# Nothing to prepare

%build
# Nothing to build

%install
rm -rf %{buildroot}
mkdir -p %{buildroot}/usr/bin
install -m 0755 %{SOURCE0} %{buildroot}/usr/bin/hidrosis
mkdir -p %{buildroot}/usr/lib/systemd/user
install -m 0644 %{SOURCE1} %{buildroot}/usr/lib/systemd/user/hidrosis.service
mkdir -p %{buildroot}/usr/lib/udev/rules.d
install -m 0644 %{SOURCE2} %{buildroot}/usr/lib/udev/rules.d/90-hidrosis.rules

%files
/usr/bin/hidrosis
/usr/lib/systemd/user/hidrosis.service
/usr/lib/udev/rules.d/90-hidrosis.rules
